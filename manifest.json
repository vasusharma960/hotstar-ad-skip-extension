{
  "manifest_version": 3,
  "name": "Disney+ Hotstar Ad Skip",
  "version": "1.0",
  "description": "Triggers whenever ads come while watching not a live content on hotstar and skips it.",
  "permissions": ["webNavigation", "activeTab", "scripting"],
  "background": {
    "service_worker": "backgroundURLCheck.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.hotstar.com/*/watch*"],
      "js": ["detectAdsVideoObserver.js"]
    }
  ]
}
